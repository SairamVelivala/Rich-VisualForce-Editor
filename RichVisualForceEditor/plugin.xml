<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

	<extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="Rich Visualforce Editor"
            class="com.vf.rich.editor.preferences.RichVisualForcePreferencePage"
            id="com.vf.rich.editor.preferences.RichVisualForcePreferencePage">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.vf.rich.editor.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   
   <extension point="org.eclipse.ui.editors">
      <editor class="com.vf.rich.editor.RichVisualForceEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            extensions="page,component"
            icon="icons/editicon.png"
            id="com.vf.rich.editor.RichVisualForceEditor"
            name="Rich VisualForce Editor">
      </editor>
   </extension>
   
    <extension point="org.eclipse.ui.commands">
      <category name="Sample Category"
            id="com.vf.rich.editor.commands.category">
      </category>
      <command name="Sample Command"
            categoryId="com.vf.rich.editor.commands.category"
            id="com.vf.rich.editor.commands.sampleCommand">
      </command>
   </extension>
   
   <extension point="org.eclipse.ui.handlers">
      <handler commandId="com.vf.rich.editor.commands.sampleCommand"
            class="com.vf.rich.editor.handlers.ContextHelpKeyHandler">
      </handler>
   </extension>
   <extension point="org.eclipse.ui.bindings">
      <key commandId="com.vf.rich.editor.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="ALT+1"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   
   
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet label="Sample Action Set" visible="true"  id="com.vf.rich.editor.actionset"> 
         <action label="DeveloperDocsHelpAction" 
               icon="icons/apexhelp.png"
               class="com.vf.rich.editor.actions.DeveloperDocsHelpAction"
               tooltip="Open Visualforce Developer's Guide"
               toolbarPath="sampleGroup"
               id="com.vf.rich.editor.actions.DeveloperDocsHelpAction">
         </action>
          <action label="ApexCodeHelpAction" 
               icon="icons/developerhelp.png"
               class="com.vf.rich.editor.actions.ApexCodeHelpAction"
               tooltip="Open Apex Code Developer's Guide"
               toolbarPath="sampleGroup"
               id="com.vf.rich.editor.actions.ApexCodeHelpAction">
         </action>
      </actionSet>
   </extension>
   
</plugin>
